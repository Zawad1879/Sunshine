<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.userpc.sunshine.WeatherSelector"
    android:onClick="storm">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationInput"
        android:hint="Enter location here"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sunButton"
        android:minHeight="128dp"
        android:minWidth="128dp"
        android:src="@drawable/sunnyy"
        android:onClick="sun"
        android:layout_below="@+id/locationInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rainButton"
        android:src="@drawable/rainy"
        android:minHeight="128dp"
        android:minWidth="128dp"
        android:layout_alignTop="@+id/sunButton"
        android:layout_alignRight="@+id/locationInput"
        android:layout_alignEnd="@+id/locationInput"
        android:onClick="rain" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stormButton"
        android:src="@drawable/stormy"
        android:minHeight="128dp"
        android:minWidth="128dp"
        android:layout_alignTop="@+id/cloudButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cloudButton"
        android:minHeight="128dp"
        android:minWidth="128dp"
        android:src="@drawable/cloudy"
        android:onClick="cloud"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mistButton"
        android:minHeight="128dp"
        android:minWidth="128dp"
        android:src="@drawable/misty"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/snowButton"
        android:layout_alignBottom="@+id/mistButton"
        android:layout_alignRight="@+id/stormButton"
        android:layout_alignEnd="@+id/stormButton"
        android:src="@drawable/snowy"
        android:minHeight="128dp"
        android:minWidth="128dp" />


    
</RelativeLayout>
